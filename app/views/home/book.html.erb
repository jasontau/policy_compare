<p id="notice"><%= notice %></p>

<h1>Business Statistics</h1>


<div class="row">
  <div class="col-lg-4">
      <div class="panel panel-green">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Quote Success Rates</h3>
          </div>
          <div class="panel-body">
              <div class="flot-chart">
                  <%= pie_chart Account.quote_success_rate %>
              </div>
              <div class="text-right">
                  <a href="#">View Details <i class="fa fa-arrow-circle-right"></i></a>
              </div>
          </div>
      </div>
  </div>
  <div class="col-lg-4">
      <div class="panel panel-red">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Premium Volume by Week</h3>
          </div>
          <div class="panel-body">
              <div class="flot-chart">
                <%= line_chart Quote.joins(:account).group_by_week(:effective_date).sum(:premium) %>
              </div>
              <div class="text-right">
                  <a href="#">View Details <i class="fa fa-arrow-circle-right"></i></a>
              </div>
          </div>
      </div>
  </div>
</div>
